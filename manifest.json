{
    "name": "The Bigman Plugman",
    "description": "Replaces any instance of please,plz,pleaze,plox,plx,plis,pliz,pls into plock",
    "version": "1.0",
    "manifest_version": 2,

    "browser_action": {
      "default_icon": "icon.png",
      "icons": {
        "16": "icon.png",
        "48": "icon.png",
       "128": "icon.png"
     },
      "default_popup": "popup.html"
     },

    "permissions": [
        "activeTab", "storage", "tabs"
    ],
    "content_scripts": [
        {
          "matches": [
            "<all_urls>"
          ],
          "js": ["content.js"]
        }
      ]
}